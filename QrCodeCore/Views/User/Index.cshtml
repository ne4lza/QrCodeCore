@model List<QrCodeCore.Models.SysUsers>
@{
    ViewBag.Title = "Index";
    int counter = 1;
}
<style>
    .results tr[visible='false'],
    .no-result {
        display: none;
    }

    .results tr[visible='true'] {
        display: table-row;
    }

    .counter {
        padding: 8px;
        color: #ccc;
    }
</style>





<div class="card">
    <a asp-action="AddUser" asp-controller="User" class="btn btn-primary">Yeni Kullanıcı</a>
    <div class="card-body">
        <h5 class="card-title">Kullanıcılarınız</h5>
        <!-- Table with stripped rows -->
        <div class="form-group pull-right">
            <input type="text" class="search form-control" placeholder="Aramak istediğiniz kelimeyi girin">
        </div>
        <span class="counter pull-right"></span>
        <table class="table table-hover table-bordered results">
            <thead>
                <tr>
                    <th>#</th>
                    <th class="col-md-5 col-xs-5">Ad-Soyad</th>
                    <th class="col-md-4 col-xs-4">Kullanıcı Adı</th>
                    <th class="col-md-3 col-xs-3">Durumu</th>
                </tr>
                <tr class="warning no-result">
                    <td colspan="4"><i class="fa fa-warning"></i>Hiçbir Sonuç Bulunamadı.</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.User_FullName</td>
                        <td>@item.User_UserName</td>
                        @if (item.User_Status)
                        {
                            <td>Aktif</td>
                        }
                        else
                        {
                            <td>Pasif</td>
                        }
                        <td><a href="/User/RemoveUser/@item.User_Id" class="btn btn-secondary"><i class="bi bi-arrow-repeat"></i></a></td>

                        <td><a href="/User/UpdateUser/@item.User_Id" class="btn btn-warning"><i class="bi bi-pencil"></i></a></td>


                    </tr>
                    counter++;
                }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->

    </div>

</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".search").keyup(function () {
                var searchTerm = $(".search").val();
                var listItem = $('.results tbody').children('tr');
                var searchSplit = searchTerm.replace(/ /g, "'):containsi('")

                $.extend($.expr[':'], {
                    'containsi': function (elem, i, match, array) {
                        return (elem.textContent || elem.innerText || '').toLowerCase().indexOf((match[3] || "").toLowerCase()) >= 0;
                    }
                });

                $(".results tbody tr").not(":containsi('" + searchSplit + "')").each(function (e) {
                    $(this).attr('visible', 'false');
                });

                $(".results tbody tr:containsi('" + searchSplit + "')").each(function (e) {
                    $(this).attr('visible', 'true');
                });

                var jobCount = $('.results tbody tr[visible="true"]').length;
                $('.counter').text(jobCount + ' item');

                if (jobCount == '0') { $('.no-result').show(); }
                else { $('.no-result').hide(); }
            });
        });</script>
}

