@model QrCodeCore.ViewModels.FoodType.FoodTypeViewModel
@{
    ViewBag.Title = "Index";
    int counter = 1;
}
<style>
    .results tr[visible='false'],
    .no-result {
        display: none;
    }

    .results tr[visible='true'] {
        display: table-row;
    }

    .counter {
        padding: 8px;
        color: #ccc;
    }
</style>
<div class="row">
    <div class="col-12">
        <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1"><i class="bi bi-plus me-1"></i>Bir Yemek Türü Ekle</button>
    </div>
</div>
<br />
<div class="modal fade" id="Modal1" tabindex="-1" role="dialog" aria-labelledby="Modal1Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="Modal1Label">Bir yemek türü ekleyin.</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="AddFoodType" asp-controller="Menu">
                    <div class="row">
                        <div class="col-6">
                            <input type="text" class="form-control" name="FoodType_Name" placeholder="Ör. İçecekler" />
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary">Yemek Türünü Listeye Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>

            </div>
        </div>
    </div>
</div>




<div class="card">
    <div class="card-body">
        <h5 class="card-title">Menünüzde bulunan kategoriler</h5>
        <!-- Table with stripped rows -->
        <div class="form-group pull-right">
            <input type="text" class="search form-control" placeholder="Aramak istediğiniz kelimeyi girin">
        </div>
        <span class="counter pull-right"></span>
        <table class="table table-hover table-bordered results">
            <thead>
                <tr>
                    <th>#</th>
                    <th class="col-md-5 col-xs-5">Kategori Adı</th>
                    <th class="col-md-4 col-xs-4">Oluşturulma Tarihi</th>
                    <th class="col-md-3 col-xs-3">Durumu</th>
                </tr>
                <tr class="warning no-result">
                    <td colspan="4"><i class="fa fa-warning"></i>Hiçbir Sonuç Bulunamadı.</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.foodTypeList)
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.FoodType_Name</td>
                        <td>@item.FoodType_CreatedDate</td>
                        @if (item.FoodType_Status)
                        {
                            <td>Aktif</td>
                        }
                        else
                        {
                            <td>Pasif</td>
                        }
                        <td><a href="/Menu/UpdateFoodTypeStatus/@item.FoodType_Id" class="btn btn-secondary"><i class="bi bi-arrow-repeat"></i></a></td>

                        <td><button type="button" data-toggle="modal" data-target=@("#Modal2-" + item.FoodType_Id) data-url="@Url.Action($"UpdateFoodType/{item.FoodType_Id}")" class="btn btn-warning"><i class="bi bi-pencil"></i></button></td>


                    </tr>
                     @Html.Partial("_UpdateModal", item) 
                    counter++;
                }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->

    </div>

</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".search").keyup(function () {
                var searchTerm = $(".search").val();
                var listItem = $('.results tbody').children('tr');
                var searchSplit = searchTerm.replace(/ /g, "'):containsi('")

                $.extend($.expr[':'], {
                    'containsi': function (elem, i, match, array) {
                        return (elem.textContent || elem.innerText || '').toLowerCase().indexOf((match[3] || "").toLowerCase()) >= 0;
                    }
                });

                $(".results tbody tr").not(":containsi('" + searchSplit + "')").each(function (e) {
                    $(this).attr('visible', 'false');
                });

                $(".results tbody tr:containsi('" + searchSplit + "')").each(function (e) {
                    $(this).attr('visible', 'true');
                });

                var jobCount = $('.results tbody tr[visible="true"]').length;
                $('.counter').text(jobCount + ' item');

                if (jobCount == '0') { $('.no-result').show(); }
                else { $('.no-result').hide(); }
            });
        });
    </script>
}

